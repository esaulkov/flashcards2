<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th><%= t('cards.index.original_text') %></th>
    <th><%= t('cards.index.translated_text') %></th>
    <th><%= t('cards.index.review_date') %></th>
    <th colspan="2"></th>
  </tr>
  </thead>
  <tbody>
  <% @cards.each do |card| %>
    <tr class="table table-hover table-condensed">
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime('%d.%m.%Y %H:%M:%S') %></td>
      <td><%= link_to t('cards.index.edit_card'), edit_card_path(card) %></td>
      <td><%= link_to t('cards.index.delete_card'), card, method: :delete,
                      data: { confirm: t('cards.index.confirm') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>